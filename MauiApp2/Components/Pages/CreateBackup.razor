@page "/CreateBackup"

<div class="wrapper">
    <a class="label">Destination Folder</a>
    <div class="Top">
        <input type="text" id="destinationTbx" name="destinationTbx" value="@simulcrum.CreateBackup.destPath">
        <div class="btngroup">
            <button class="topbtn" @onclick="simulcrum.CreateBackup.destbtn_Click">Add Folder</button><br>
        </div>
    </div>
    <a class="label">Source Folder</a>
    <div class="Mid">
        <input type="text" id="sourceRtb" name="sourceRtb" @bind="simulcrum.CreateBackup.sourcePathsText">
        <div class="btngroup">
            <button class="midbtn" @onclick="simulcrum.CreateBackup.sourcebtn_Click">Add Folder</button><br>
            <button class="midbtn">Add File</button><br>
            <button class="midbtn">T.B.A</button><br>
            <button class="midbtn">Clear</button><br>
        </div>
    </div>
    <div class="Bot">
        <div>
            <button class="botbtn">Start</button>
            <button class="botbtn">Load</button>
            <button class="botbtn">Save</button>
        </div>
    </div>
</div>